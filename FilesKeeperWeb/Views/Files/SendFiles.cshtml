
@{
    ViewData["Title"] = "SendFiles";
}

<h2>Загрузить файлы</h2>

<div class="row">
    <div class="col-md-9">
        <div id="dropzone">
            <form action="/Files/Upload" class="dropzone needsclick dz-clickable" id="uploader">
                <div class="dz-message needsclick">
                    Drop files here or click to upload.<br>
                </div>
            </form>
        </div>
    </div>
</div>

